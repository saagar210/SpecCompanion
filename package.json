{
  "name": "spec-companion",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:lean": "./scripts/lean-dev.sh",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "clean:heavy": "rm -rf dist src-tauri/target src-tauri/gen/schemas node_modules/.vite",
    "clean:full": "rm -rf dist node_modules src-tauri/target src-tauri/gen/schemas node_modules/.vite .vite && find . -name '.DS_Store' -type f -delete || true",
    "clean": "pnpm run clean:full",
    "build:ui": "tsc && vite build",
    "ui:lint": "eslint tests/ui src/main.tsx src/monitoring/webVitals.ts --max-warnings=0 && stylelint \"src/styles/tokens.css\" --allow-empty-input",
    "ui:typecheck": "tsc --noEmit",
    "ui:gate:static": "pnpm ui:lint && pnpm ui:typecheck",
    "ui:test:visual": "playwright test tests/ui --grep @visual",
    "ui:test:a11y": "playwright test tests/ui --grep @a11y",
    "ui:gate:regression": "pnpm ui:test:visual && pnpm ui:test:a11y",
    "ui:gate": "pnpm ui:gate:static && pnpm ui:gate:regression",
    "ui:test:visual:update": "playwright test tests/ui --grep @visual --update-snapshots"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.20",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.13.0",
    "recharts": "^3.7.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "lighthouse": "^12.8.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript-eslint": "^8.46.1",
    "web-vitals": "^5.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
